<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_screen_background"
    tools:context=".activty.AboutActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/about_us_title"
        style="@style/dinProBold700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/about_us_menu_item"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ScrollView
        android:id="@+id/about_us_text_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_us_image"
        android:layout_below="@+id/about_us_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/about_us_text_content"
            style="@style/dinProRegular"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_us_text"
            android:textColor="@color/white" />
    </ScrollView>


    <ImageView
        android:id="@+id/about_us_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_us_text"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:src="@drawable/about_logo" />


</RelativeLayout>